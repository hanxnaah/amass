- attributes = %w(organization_name organization_description contact_email)
- attributes += %w(contact_name payment description deadline inspiration_links)
- attributes += %w(extra_resources)

= render 'mailer_template',
    title: 'An organization has signed up!',
    data: attributes.map { |attribute| [attribute.capitalize.gsub(/_/, ' '),
      @organization.send(attribute)] }
