.row
  .large-3.columns
    %img{ ng: { src: '{{teamBio|imageForTeamBio}}' } }
    %br
    %br
    %p
      - %w(website twitter linkedin github).each do |media|
        %a{ ng: { if: "teamBio.#{media}", href: "{{teamBio.#{media}}}" } }
          :ruby
            icon_name =
              case media
              when 'website'
                'home'
              when 'github'
                'github-alt'
              else
                media
              end
          %span.fa-stack.fa-lg
            %i.fa.fa-circle.fa-stack-2x
            %i{ class: "fa fa-#{icon_name} fa-stack-1x fa-inverse" }
  .large-9.columns
    %h3 {{teamBio.fullName}}
    %p
      %em {{teamBio.position}}
    %p {{teamBio.bio}}
    %p
      %label Favorite movie:
      {{teamBio.favoriteMovie}}
    %a.close-reveal-modal{ ng: { click: 'close()' } } &#215;
