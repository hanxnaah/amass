.team-bios.amass-section{ ng: { controller: 'TeamBiosCtrl' } }
  .row.row-content
    %h1
      The Team&nbsp;
      %small Click to learn more!
    %br
    .row
      .team-bio.medium-3.columns.text-center{ ng: { repeat: 'teamBio in teamBios' } }
        .team-bio__basic-profile{ ng: { click: 'open(teamBio)' } }
          %h3 {{teamBio.nickname}}
          %p
            %em {{teamBio.position}}
          .team-bio__profile-image
            %img{ ng: { src: '{{teamBio|imageForTeamBio}}' } }
        - %w(website twitter linkedin github).each do |media|
          %a{ ng: { if: "teamBio.#{media}", href: "{{teamBio.#{media}}}" } }
            :ruby
              icon_name =
                case media
                when 'website'
                  'home'
                when 'github'
                  'github-alt'
                else
                  media
                end
            %span.fa-stack.fa-lg.team-bio__icon
              %i.fa.fa-circle.fa-stack-2x
              %i{ class: "fa fa-#{icon_name} fa-stack-1x" }
